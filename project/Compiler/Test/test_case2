let
    function computePow (x : int, n : int) = 
        let
            var powVal := 1
        in
            (
                for i := 0 to n do
                    powVal := powVal * x;
                powVal
            )
        end
in
    (
        println (computePow (3, 2));
        println (computePow (2, 3));
        println (computePow (5, 3))
    )
end